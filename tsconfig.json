{
  "compilerOptions": {
    "lib": ["es2022"],
    "target": "ES2020",                          
    "module": "CommonJS",                             
    "resolveJsonModule": true,               
    "esModuleInterop": true,      
    "forceConsistentCasingInFileNames": true,      
    "strict": true,    
    "outDir": "dist",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true
  },
  "ts-node": {
    "swc": true, 
    "transpileOnly": true 
  }
}
